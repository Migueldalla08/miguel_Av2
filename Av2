Lnota3 = Number(prompt("Digite a terceira nota de Luiza"));

Lmedia = (Lnota1+Lnota2+Lnota3)/3;

console.log("a media das notas de Luiza é: "+(Lmedia))

if ( Lmedia >= 6 ) {
   console.log("Aluno aprovado");
     } else {
     if ( Lmedia <= 5) {
       console.log("Aluno reprovado")
     }} 

